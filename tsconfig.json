{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",                 
    "lib": ["ES6", "DOM"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*",".eslintrc.js"],
  "exclude": ["node_modules"]
}
